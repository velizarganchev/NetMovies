@model AllMovieQueryModel

@{ ViewBag.Title = "Watchlist";
    ViewBag.Controller = "WatchList";
    ViewBag.Action = "MovieList";
}


@if (Model.TotalMovies < 1)
{
    <!-- page title -->
    <section class="section section--first section--bg" data-bg="img/section/section.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section__wrap">
                        <!-- section title -->
                        <h2 class="section__title">My Watchlist</h2>
                        <!-- end section title -->
                        <!-- breadcrumb -->
                        <ul class="breadcrumb">
                            <li class="breadcrumb__item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb__item breadcrumb__item--active">My Watchlist</li>
                        </ul>
                        <!-- end breadcrumb -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br />
    <!-- end page title --><!-- catalog -->
    <div class="catalog">
        <div class="container">
            <div class="row">
                <h1 style="color:red">No Movies Added</h1>
            </div>
        </div>
    </div>
}
else
{
    <!-- page title -->
    <section class="section section--first section--bg" data-bg="img/section/section.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section__wrap">
                        <!-- section title -->
                        <h2 class="section__title">My Watchlist</h2>
                        <!-- end section title -->
                        <!-- breadcrumb -->
                        <ul class="breadcrumb">
                            <li class="breadcrumb__item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb__item breadcrumb__item--active">My Watchlist</li>
                        </ul>
                        <!-- end breadcrumb -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br />
    <!-- end page title --><!-- catalog -->
    <div class="catalog">
        <div class="container">
            <div class="row">
                <!-- card -->
                @foreach (var movie in Model.Movies)
                {
                    <div class="col-6 col-sm-12 col-lg-6">
                        <div class="card card--list">
                            <div class="row">
                                <div class="col-12 col-sm-4">
                                    <div class="card__cover">
                                        <img src="@movie.ImageUrl" alt="">
                                        <a href="@movie.WatchUrl" class="card__play">
                                            <i class="icon ion-ios-play"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-8">
                                    <div class="card__content">
                                        <h3 class="card__title"><a asp-controller="Movie" asp-action="MovieDetails" asp-route-id="@movie.MovieId">@movie.Title</a></h3>
                                        <span class="card__category">
                                            <a href="#">@movie.Genre</a>
                                        </span>

                                        <div class="card__wrap">
                                            <span class="card__rate"><i class="icon ion-ios-star"></i>@movie.VotesCount</span>

                                            <ul class="card__list">
                                                <li>@movie.Quality</li>
                                                <li>@movie.AgeLimit</li>
                                            </ul>

                                        </div>

                                        <div class="card__description">
                                            <p>
                                                @movie.Description
                                            </p>
                                        </div>
                                    </div>
                                    <div>
                                        <div>
                                            <a asp-controller="WatchList" asp-action="Remove" asp-route-id="@movie.MovieId" class="btn btn-danger" style="color:red">Remove</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <!-- end card -->
                <!-- paginator -->
                <partial name="_PaginationPartial" model="@Model" />
                <!-- end paginator -->
            </div>
        </div>
    </div>
}