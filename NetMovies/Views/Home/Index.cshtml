@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

@{
    var movies = Model.Movies;

    var firstMovie = movies.Any() ? movies[0] : null;

    var secondMovie = movies.Count > 1 ? movies[1] : null;

    var thirdMovie = movies.Count > 2 ? movies[2] : null;
}

@if (!movies.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the world of movies</h1>
        <p class="lead">There are no movies in the system currently available!</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Movie" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Movie</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstMovie != null)
        {
            <div class="carousel-item active">
                <a asp-controller="Movie" asp-action="MovieDetails" asp-route-id="@firstMovie.MovieId" class="hvr-shutter-out-horizontal">
                    <img class="d-block w-100" src="@firstMovie.ImageUrl" alt="@firstMovie.Title @firstMovie.Country">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </a>
            </div>
        }
        @if (secondMovie != null)
        {
            <div class="carousel-item">
                <a asp-controller="Movie" asp-action="MovieDetails" asp-route-id="@secondMovie.MovieId" class="hvr-shutter-out-horizontal">
                    <img class="d-block w-100" src="@secondMovie.ImageUrl" alt="@secondMovie.Title @secondMovie.Country">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </a>
            </div>
        }
        @if (thirdMovie != null)
        {
            <div class="carousel-item">
                <a asp-controller="Movie" asp-action="MovieDetails" asp-route-id="@thirdMovie.MovieId" class="hvr-shutter-out-horizontal">
                    <img class="d-block w-100" src="@thirdMovie.ImageUrl" alt="@thirdMovie.Title @thirdMovie.Country">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </a>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

