@model AllMovieQueryModel

@{ ViewBag.Title = "My Movie";
    ViewBag.AllowCarEdit = true; }


<div class="mb-5"></div>

<div class="row">
    @foreach (var movie in Model.Movies)
    {
<div class="col-md-4">
    <a asp-controller="Movie" asp-action="MovieDetails" asp-route-id="@movie.MovieId" class="hvr-shutter-out-horizontal">
        <div class="card mb-4">
            <img class="card-img-top" src="@movie.ImageUrl" alt="@movie.Title @movie.Country (@movie.Year)">
            <div class="card-body">
                <h5 class="card-title">@movie.Title</h5>
            </div>
        </div>
    </a>
    <a asp-controller="MyMovie" asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-warning">Edit</a>
    <a asp-controller="MyMovie" asp-action="Delete" asp-route-id="@movie.MovieId" class="btn btn-danger">Delete</a>
</div>}
</div>

@if (!Model.Movies.Any())
{
<div class="jumbotron">
    <h1 class="display-4">You haven't added movies!</h1>
    <hr class="my-4">
    <p class="lead">
        <a asp-controller="Movie" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Movie</a>
    </p>
</div>}



